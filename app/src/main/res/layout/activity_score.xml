<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".ScoreActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/tv_your_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score: "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score: "
            android:textSize="25sp" />

        <Button
            android:id="@+id/reset_high_score_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset High Score"
            android:onClick="resetHighScore"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/high_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_button"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to menu"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="18dp"
            android:textSize="25sp"/>

        <ImageView
            android:layout_marginTop="19dp"
            android:id="@+id/imageView3"
            android:layout_width="336dp"
            android:layout_height="191dp"
            app:srcCompat="@mipmap/snake2_foreground" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>